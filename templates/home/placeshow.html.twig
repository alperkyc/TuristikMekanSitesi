                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-12">
                                                    {#<input type="hidden" id="comment__token" name="comment[_token]" value="Am96Ce6MaiTvsVVLRVKEPuuuTIBYjZFdouzQZSoai0w" />#}
                                                    <input type="hidden"  name="token" value="{{ csrf_token('comment') }}" />
                                                    <input type="submit" value="Yorumunu Yolla" class="btn btn-primary btn-lg px-5">
                                                </div>

                                            </div>
                                        </form>
                                    {% else %}
                                        <div class="col-lg-3 text-right">

                                            <a href="/login" class="small btn btn-primary px-4 py-2 rounded-0"><span class="icon-lock"></span> Log In</a>
                                            <br>

                                            <a href="/register" class="small btn btn-success px-4 py-2 rounded-0"><span class="icon-users"></span> Register</a>
                                        </div>


                                        </p>
                                    {% endif %}
                                </div>

                            </div>
                        </div>
